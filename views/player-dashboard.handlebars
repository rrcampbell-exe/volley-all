<div>
  <div class='background2 radius shadow1 padding2 margin3' data-aos="fade-up" data-aos-duration="1000">
        <div>
            <h3 class="shadow">Welcome, {{user.dataValues.first_name}}!</h3>
        </div>
        <div>
            <h4 class="shadow">{{user_team.dataValues.team_name}}</h4>
            <p class="shadow">Team Record: {{user_team.dataValues.wins}} Wins, {{user_team.dataValues.losses}} Losses</p>
        </div>
  </div>
  <section data-aos="slide-right" data-aos-duration="1000" class='margin2 shadow1 radius padding2'>
    <h4 id="schedule" class='padding2'>Team Schedule</h4>
    <table class='padding1 highlight striped'>
      {{> game-table-header}}
        {{#each game}}
        <tr>
          {{> game-partial}}
        </tr>
        {{/each}}
    </table>
  </section>
  {{#unless game}}
    <section>
      <p>There are no scheduled games at this time.</p>
    </section>
  {{/unless}}

  <section data-aos="slide-left" data-aos-duration="500" class='margin2 shadow1 radius padding2'>
    <h4 id="league-standings" class='padding2'>League Standings</h4>
    <table class='padding1 highlight striped'>
      <tr class='padding1'>
        <th>Team Name</th>
        <th>Wins</th>
        <th>Losses</th>
      </tr>
      {{#each teams}}
        <tr>
          {{> team-info }}
        </tr>
      {{/each}}
    </table>
  </section>

  <section data-aos="fade-up" data-aos-duration="1000" class='margin2 shadow1 radius padding2'>
    <h4 id="team-roster" class='padding2'>{{user_team.dataValues.team_name}} Roster</h4>
    <table class='padding1 highlight striped'>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
        {{#each roster}} 
        <tr>
            {{> player-info}}
        </tr>
        {{/each}}
    </table>
  </section>
  </div>