<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Volley-All</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

    <link rel="icon" href="https://fav.farm/🏐" />
  </head>
  <body>
    <div class="wrapper">
      <header>
        <h1 data-aos="flip-up" data-aos-duration="1000">
          🏐
          <a href="/">Volley-All</a>
        </h1>
        <nav data-aos="fade-in" data-aos-duration="1500">
          {{#if loggedIn}}
            {{#if is_Admin}}
            <a href="/"><button id="dashboard" class="btn-no-style">dashboard</button></a>
            <a href="#create-a-team"><button class="btn-no-style">create a team</button></a>
            <a href="#league-standings"><button class="btn-no-style">league standings</button></a>
            <a href="#add-a-game"><button class="btn-no-style">add a game</button></a>
            <a href="#league-schedule"><button class="btn-no-style">league schedule</button></a>
            <button id="logout" class="btn-no-style">logout</button>
            {{else}}
            <a href="/"><button id="dashboard" class="btn-no-style">dashboard</button></a>
            <a href="#team-schedule"><button class="btn-no-style">team schedule</button></a>
            <a href="#league-standings"><button class="btn-no-style">league standings</button></a>
            <a href="#team-roster"><button class="btn-no-style">team roster</button></a>
            <button id="logout" class="btn-no-style">logout</button>
            {{/if}}
          {{else}}
            <a href="/login">login</a>
          {{/if}}
        </nav>
      </header>
      <main>
        {{{body}}}
      </main>
      <footer>
        <a href="https://github.com/rrcampbell-exe/volley-all" target="_blank">🏐 Bump, set, and spike with us on GitHub. 🏅</a>
      </footer>
    </div>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>
</html>