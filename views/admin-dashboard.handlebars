  <script src="/javascript/game-delete.js"></script>
  <script src="/javascript/game-edit.js"></script>
  <script src="/javascript/team-create.js"></script>
  <script src="/javascript/team-delete.js"></script>
  <script src="/javascript/team-edit.js"></script>